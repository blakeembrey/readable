form-field-state(text-color = #555, border-color = #ccc, background-color = #f5f5f5)
  .help-block,
  .help-inline,
  .control-label
    color: text-color
  .input-with-feedback
    border-color: border-color
    &:focus,
    &.focused
      color: text-color
      background-color: background-color

// https://github.com/visionmedia/nib/blob/master/lib/nib/clearfix.styl
clearfix()
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie
