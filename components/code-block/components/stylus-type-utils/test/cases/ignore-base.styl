base-font-size = 75%

.test-rem
	default: rem(1, true)
	em-to-rem: rem(1em, true)
	px-to-rem: rem(16px, true)
	pt-to-rem: rem(14pt, true)
	percent-to-rem: rem(100%, true)


.test-em
	default: em(1, true)
	rem-to-em: em(1rem, true)
	px-to-em: em(16px, true)
	pt-to-em: em(14pt, true)
	percent-to-em: em(100%, true)


.test-px
	default: px(16, true)
	rem-to-px: px(1rem, true)
	em-to-px: px(1em, true)
	pt-to-px: px(14pt, true)
	percent-to-px: px(100%, true)


.test-pt
	default: pt(14, true)
	rem-to-pt: pt(1rem, true)
	em-to-pt: pt(1em, true)
	px-to-pt: pt(16px, true)
	percent-to-pt: pt(100%, true)


.test-percent
	default: percent(100, true)
	rem-to-percent: percent(1rem, true)
	em-to-percent: percent(1em, true)
	px-to-percent: percent(16px, true)
	pt-to-percent: percent(14pt, true)
