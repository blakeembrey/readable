; top-most EditorConfig file
root = true

; Unix newlines, spaces and width of two by default
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.styl]
indent_style = tab
indent_size = 4
